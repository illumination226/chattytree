<%
require 'rss/2.0'
require 'open-uri'
      feed_url = "http://www.woot.com/Blog/Feed.ashx" 
      output = "";
      open(feed_url) do |http|
        response = http.read
        result = RSS::Parser.parse(response, false)
        output = "<span class=\"feedTitle\">#{result.channel.title}</span><br /><ul>" 
        result.items.each_with_index do |item, i|
          output += "<li><a href=\"#{item.link}\">#{item.title}</a><p>#{item.description}</p></li>" if #{item.category} == "Woot"  
        end 
        output += "</ul>" 
      end
%>
<%=raw render :text => output%>